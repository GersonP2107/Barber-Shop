---
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import ImageMain from "../components/ImageMain.astro";
import Services from "../components/Services.astro";
import Reverce from "../components/Reverce.astro";
import About from "../components/About.astro";
import Team from "../components/Team.astro";
---

<Layout title="BarberShop" />
<main>
  <section class="">
    <ImageMain />
  </section>

  <section class="h-full text-black">
    <Services />
  </section>

  <section
    class="flex flex-col justify-center pt-9 md:flex md:flex-row items-center md:justify-center md:space-x-36 space-y-0"
  >
    <Team />
    <Reverce />
  </section>
  <section class="m-5 pt-9">
    <About />
  </section>
  <Footer />
</main>
